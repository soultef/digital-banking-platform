# =========================
# Database Configuration
# =========================
# JDBC URL for the database
DB_URL=jdbc:mysql://localhost:3306/digital_banking?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=false

# Database username (service-specific)
DB_USERNAME=root

# Database password (do not commit real password)
DB_PASSWORD=Soulsql@01

# =========================
# Spring Profile
# =========================
# Active profile: dev, test, or prod
SPRING_PROFILES_ACTIVE=dev

# =========================
# Flyway Configuration
# =========================
# Optional schema placeholder (if you use it in Flyway migrations)

#FLYWAY_SCHEMA=digital_banking

# =========================
# Connection Pool / HikariCP
# =========================
# Maximum number of DB connections in the pool
HIKARI_MAX_POOL_SIZE=20

# Minimum idle connections to keep ready
HIKARI_MIN_IDLE=5

# Timeout settings in milliseconds
HIKARI_IDLE_TIMEOUT=300000
HIKARI_MAX_LIFETIME=1800000
HIKARI_CONNECTION_TIMEOUT=30000

# Pool name for logging/monitoring
HIKARI_POOL_NAME=AuthServiceHikariCP
